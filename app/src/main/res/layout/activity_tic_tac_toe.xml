<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_player1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:drawablePadding="-24dp"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/onSecondary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:drawableStartCompat="@drawable/baseline_close_24"
        tools:text="Player 1" />

    <GridLayout
        android:id="@+id/grid_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:columnCount="3"
        android:foreground="@drawable/gradient_foreground_player1"
        android:rowCount="3">

        <Button
            android:id="@+id/button_00"
            style="@style/ButtonStyle"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/button_01"
            style="@style/ButtonStyle"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/button_02"
            style="@style/ButtonStyle"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/button_10"
            style="@style/ButtonStyle"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/button_11"
            style="@style/ButtonStyle"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/button_12"
            style="@style/ButtonStyle"
            app:backgroundTint="@null"
            tools:text="O" />

        <Button
            android:id="@+id/button_20"
            style="@style/ButtonStyle"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/button_21"
            style="@style/ButtonStyle"
            app:backgroundTint="@null"
            tools:text="X" />

        <Button
            android:id="@+id/button_22"
            style="@style/ButtonStyle"
            app:backgroundTint="@null" />

    </GridLayout>

    <TextView
        android:id="@+id/text_view_player2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tertiary"
        android:drawablePadding="-24dp"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="8dp"
        android:textColor="@color/onTertiary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:drawableStartCompat="@drawable/outline_circle_24"
        tools:text="Player 2" />

</LinearLayout>
