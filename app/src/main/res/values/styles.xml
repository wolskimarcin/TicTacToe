<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:textSize">128sp</item>
        <item name="android:textColor">@color/field_text_color</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="GameResultButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">8dp</item>
    </style>

</resources>
